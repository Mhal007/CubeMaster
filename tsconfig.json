{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "*"
      ]
    },
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "client/**/*",
    "collections/**/*",
    "devops/**/*",
    "lib/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    ".meteor"
  ]
}
